{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    //    "declaration": true,
    //    "emitDeclarationOnly": true,
    "outDir": "./lib",
    "allowJs": true,
//    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    //    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true
  },
  "include": [
    "src"
  ]
}